<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<view-state id="username" view="/WEB-INF/views/login/username.jsp">
	    <transition on="check" to="password"/>
	</view-state>
	
	<view-state id="password" view="/WEB-INF/views/login/password.jsp">
	    <transition on="register" to="success"/>
	</view-state>
	 
	<end-state id="success" view="/WEB-INF/views/login/success.jsp"/>
	 
	<end-state id="failure" view="/WEB-INF/views/login/failure.jsp"/>
	
	<global-transitions>
	    <transition on="cancel" to="failure"/>
	</global-transitions>

</flow>
